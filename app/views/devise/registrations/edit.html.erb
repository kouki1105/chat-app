<h2 class="text-center my-3">アカウント編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="d-flex justify-content-center">
    <div class="form-group col-md-8">
      <%= f.label :email, 'メールアドレス（ユーザー名）' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group col-md-8">
    <%= f.label :password, '新しいパスワード' %> <i>(変更しない場合、空白のままにしてください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="form-group col-md-8">
    <%= f.label :password_confirmation, '新しいパスワード（確認）' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group col-md-8">
    <%= f.label :current_password, '現在のパスワード' %> <i>(パスワードを変更するには現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions d-flex justify-content-center">
    <%= f.submit "更新", class: "btn btn-outline-dark" %>
  </div>
<% end %>

<div class="d-flex justify-content-center my-5">
  <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか?" }, method: :delete, class: "btn btn-outline-danger" %>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= link_to "前のページに戻る", :back %>
</div>
